<!DOCTYPE html>
<html>
<head>
  <title>ITE</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
   <%= stylesheet_link_tag    'bootstrap.min', media: 'all', 'data-turbolinks-track' => true %>
   <%= stylesheet_link_tag    'font-awesome.min', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= javascript_include_tag "jquery-1.11.2.min.js", "bootstrap.min.js" , 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	<div class="container">
    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Mark Dash</a>
    </div>

     <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "First Year", controller: "years", action: "show", id: "1" %></li>
        <li><%= link_to "Second Year", controller: "years", action: "show", id: "2" %></li>
        <li><%= link_to "Third Year", controller: "years", action: "show", id: "3" %></li>
        <li><%= link_to "Forth Year", controller: "years", action: "show", id: "4" %></li>
        <li><%= link_to "Fifth Year", controller: "years", action: "show", id: "5" %></li>
      <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Add new Subjects <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "1st-year subjects", controller: "subjects", action: "new", year_id: "1" %></li>
            <li><%= link_to "2nd-year subjects", controller: "subjects", action: "new", year_id: "2" %></li>
            <li><%= link_to "3rd-year subjects", controller: "subjects", action: "new", year_id: "3" %></li>
            <li><%= link_to "4th-year subjects", controller: "subjects", action: "new", year_id: "4" %></li>
            <li class="divider"></li>
            <li><%= link_to "5th-year subjects", controller: "subjects", action: "new", year_id: "5" %></li>
          </ul>
        </li>
      </ul>


      <ul class="nav navbar-nav navbar-right">
        <li><a href="<%= new_year_path%>">Add new year</a></li>
      </ul>
    </div>

		<%= yield %>
    
    </div>
    </nav>
	</div>
</body>
</html>
